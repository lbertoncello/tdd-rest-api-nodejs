{
  "name": "tdd-rest-api-nodejs",
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint src/** test/** --fix --ext .js,.jsx",
    "test": "jest --verbose=true",
    "secure-mode": "jest --watch --verbose=true",
    "postinstall": "husky install",
    "cz": "cz",
    "cz-init": "commitizen init cz-conventional-changelog --yarn --dev --exact"
  },
  "description": "Exemplo de API REST feita em Node.js utilizando TDD",
  "main": "server.js",
  "repository": "https://github.com/lbertoncello/tdd-rest-api-nodejs",
  "author": "Lucas Bertoncello de Andrade",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.29.0",
    "husky": "^6.0.0",
    "jest": "^27.0.5",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3"
  },
  "dependencies": {
    "consign": "^0.1.6",
    "express": "^4.17.1",
    "knex": "^0.95.6",
    "pg": "^8.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettier-format && yarn lint"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
